    "background.fullscreen": {
        // `images` 支持在线和本地图片，以及文件夹。
        "images": [
            "E:\\code\\TeddiZen-bit.github.io-main\\img\\d05ced23fb6504f5e216d90e46b7d0dc10820191.jpg"
        ],
        "opacity": 0.07,
        "size": "cover",
        "position": "center",
        "interval": 0,
        "random": false
